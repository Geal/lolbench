[Unit]
Description=lolbench agent

[Service]
Type=oneshot
User=adam
SendSIGKILL=no
WorkingDirectory={{ deploy_dir }}
ExecStart=/home/adam/.cargo/bin/cargo run --release -- \
    measure \
    --runner '{{ runner }}' \
    --data-dir '{{ data_dir }}' \
    --site-dir '{{ site_dir }}' \
    --publish \
    --nightlies-since {{ epoch_nightly }}
